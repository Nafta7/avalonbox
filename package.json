{
  "name": "avalonbox",
  "version": "0.0.1",
  "description": "",
  "main": "lib/scripts/avalonbox.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -r dist/*",

    "deploy:site": "gh-pages -d pages",
    "deploy:css": "node-sass src/styles/ -o pages/css",
    "deploy:js": "browserify -d pages/js/app.js -o pages/bundle.js -t [ babelify --presets [ es2015 ] ]",

    "build:js": "babel --presets es2015 -d lib/ src/scripts",
    "build:css": "node-sass src/styles -o dist/",
    "build": "npm run build:css && npm run build:js",

    "watch:js": "watchify pages/js/app.js -d -o pages/bundle.js -t [ babelify --presets [ es2015 ] ]",
    "watch:css": "npm run deploy:css -- -w",
    "serve": "npm run watch:css | npm run watch:js",

    "prepublish": "npm run build:js && npm run build:css"
  },
  "keywords": [],
  "author": "nafta",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "gh-pages": "^0.11.0",
    "node-sass": "^3.8.0",
    "watchify": "^3.7.0"
  }
}
