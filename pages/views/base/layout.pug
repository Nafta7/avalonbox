doctype html
html
  head
    title Avalonbox - A simple lightbox solution in vanilla JS.
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,700" rel="stylesheet")

    // build:css css/index.all.css
    link(rel="stylesheet" href="css/index.css" media="screen" charset="utf-8")
    link(rel="stylesheet" href="../dist/avalonbox.css" media="screen" charset="utf-8")
    link(rel="stylesheet" href="../node_modules/prismjs/themes/prism.css" media="screen" charset="utf-8")
    block head
    // endbuild
  body
    include ../partials/_header.pug
    block content

    include ../partials/_footer.pug

  // build:js js/bundle.all.js
  script(src="js/bundle.js" charset="utf-8")
